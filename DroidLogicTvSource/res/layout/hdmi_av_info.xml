<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/info_margin_to_parent"
    android:layout_marginRight="@dimen/info_margin_to_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="2dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_info" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
	        android:id="@+id/ha_info_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="@dimen/info_margin_to_parent1"
	        android:textColor="@color/source_info_ha"
	        android:textSize="@dimen/text_size_info_ha_type" />
	    <TextView
	        android:id="@+id/ha_info_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:textColor="@color/source_info_ha"
	        android:textSize="@dimen/text_size_info_ha_rel" />
    </LinearLayout>
</LinearLayout>
